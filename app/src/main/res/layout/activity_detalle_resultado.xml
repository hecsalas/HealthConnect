<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    android:padding="16dp"
    tools:context=".DetalleResultado">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvDetalleTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del Examen"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvDetalleFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha: N/A"
            android:textSize="16sp"
            android:textColor="@color/secondary_text"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rango y Resultado"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:background="@drawable/bg_card"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tvValorResultado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor: 105"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvRangoNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rango: 70 - 100"
                android:textSize="16sp"
                android:textColor="@color/secondary_text"
                android:layout_marginBottom="8dp" />

            <RelativeLayout
                android:id="@+id/rangoBase"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#E0E0E0">

                <View
                    android:id="@+id/indicadorValor"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_indicador_normal"/>

            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Interpretación Clínica"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvDetalleDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aquí se mostrará la descripción ficticia del resultado, interpretando el valor obtenido en relación al rango normal."
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="4dp"
            android:background="@drawable/bg_card"
            android:padding="12dp" />

    </LinearLayout>

</ScrollView>