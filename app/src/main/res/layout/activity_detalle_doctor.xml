<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_detalle_doctor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bg_gradient"
    tools:context=".DetalleDoctor">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- Sección superior: Información del doctor -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNombreDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dr. Diego Pérez"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/primary" />

                <TextView
                    android:id="@+id/tvEspecialidadDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cardiología"
                    android:textSize="16sp"
                    android:textColor="@color/gray" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivFotoDoctor"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_doctor"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Botones de acción -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:weightSum="3">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_call"
                android:backgroundTint="@color/primary"
                android:layout_weight="1"
                android:contentDescription="Llamar" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_video"
                android:backgroundTint="@color/primary"
                android:layout_weight="1"
                android:contentDescription="Videollamada" />

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_calendar"
                android:backgroundTint="@color/primary"
                android:layout_weight="1"
                android:contentDescription="Calendario" />
        </LinearLayout>

        <!-- Descripción del doctor -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Médico con más de 10 años de experiencia en atención primaria y medicina general. Enfocado en el bienestar integral de sus pacientes."
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <!-- Días disponibles -->
        <TextView
            android:text="Días disponibles"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/contenedorDias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <Button
                android:text="Lunes 20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="Martes 21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary"
                android:textColor="@android:color/white"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <Button
                android:text="Miércoles 22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:text="Jueves 23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Horas disponibles -->
        <TextView
            android:text="Horas disponibles"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <GridLayout
            android:id="@+id/gridHoras"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:alignmentMode="alignBounds"
            android:rowOrderPreserved="false"
            android:layout_marginBottom="16dp">

            <Button android:text="08:00 AM" />
            <Button android:text="09:00 AM" />
            <Button android:text="10:00 AM" />
            <Button android:text="11:00 AM" />
            <Button android:text="12:00 PM"
                android:backgroundTint="@color/primary"
                android:textColor="@android:color/white"/>
            <Button android:text="13:00 PM" />
            <Button android:text="15:30 PM" />
            <Button android:text="16:30 PM" />
            <Button android:text="17:30 PM" />
        </GridLayout>

        <!-- Confirmar -->
        <CheckBox
            android:id="@+id/chkConfirmar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar la selección"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnAgendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agendar"
            android:textAllCaps="false"
            android:backgroundTint="@color/primary"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
