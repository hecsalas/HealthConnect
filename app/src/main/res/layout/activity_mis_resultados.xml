<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_resultados"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_gradient"
    tools:context=".MisResultados">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloResultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis Resultados"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Lista de resultados -->
    <ListView
        android:id="@+id/listResultados"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/primary"
        android:dividerHeight="1dp"
        android:background="@android:color/white"
        android:padding="8dp" />

    <!-- Botón para actualizar -->
    <Button
        android:id="@+id/btnActualizarResultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar resultados"
        android:textAllCaps="false"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white"
        android:layout_marginTop="12dp" />

</LinearLayout>
