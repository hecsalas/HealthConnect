<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_examenes_disponibles"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_gradient"
    tools:context=".ExamenesDisponibles">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloExamenes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exámenes Disponibles"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <!-- Campo de búsqueda -->
    <EditText
        android:id="@+id/etBuscarExamen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar examen..."
        android:drawableStart="@android:drawable/ic_menu_search"
        android:background="@drawable/rounded_edittext"
        android:padding="10dp"
        android:layout_marginBottom="12dp" />

    <!-- Lista -->
    <ListView
        android:id="@+id/listaExamenes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/gray"
        android:dividerHeight="1dp" />

    <!-- Botón para AGREGAR examen -->
    <Button
        android:id="@+id/btnAgregarExamen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Agregar examen"
        android:textAllCaps="false"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white"
        android:layout_marginTop="10dp" />

</LinearLayout>
