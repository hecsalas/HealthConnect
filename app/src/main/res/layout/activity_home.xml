<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_gradient"
    tools:context=".Home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp">

        <ImageView
            android:id="@+id/userAvatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:src="@drawable/ic_user_avatar"
            android:background="@drawable/circle_background_flat"
            android:scaleType="centerCrop"
            android:contentDescription="Usuario"
            android:layout_marginEnd="12dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hola, Juan Carlos"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido de nuevo ðŸ‘‹"
                android:textSize="15sp"
                android:textColor="@color/gray" />
        </LinearLayout>
    </LinearLayout>

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar examen, mÃ©dico o servicio"
        android:background="@drawable/rounded_search_minimal"
        android:padding="12dp"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="10dp"
        android:inputType="text"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="24dp" />


    <TextView
        android:id="@+id/tvServiciosTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Servicios rÃ¡pidos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginBottom="12dp" />

    <ListView
        android:id="@+id/lista_servicios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:dividerHeight="0dp"
        android:divider="@android:color/transparent"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_marginBottom="24dp" />


    <TextView
        android:id="@+id/tvMedicosTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MÃ©dicos anteriores"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:layout_marginBottom="12dp" />

    <ListView
        android:id="@+id/lista_medicos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:dividerHeight="0dp"
        android:divider="@android:color/transparent"
        android:paddingTop="4dp"
        android:paddingBottom="4dp" />
</LinearLayout>