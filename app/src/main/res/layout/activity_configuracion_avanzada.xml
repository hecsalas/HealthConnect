<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_configuracion_avanzada"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bg_gradient"
    tools:context=".ConfiguracionAvanzada">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Configuración Avanzada de Recordatorios"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gestión de reglas de dosificación, horarios complejos y repetición."
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <ListView
        android:id="@+id/listaReglasAvanzadas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/gray"
        android:dividerHeight="1dp"
        android:background="@drawable/bg_card"
        android:padding="8dp"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnAnadirRegla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+ Añadir Nueva Regla"
        android:textAllCaps="false"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnGuardarConfiguracionAvanzada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Configuración Avanzada"
        android:backgroundTint="@color/success_color"
        android:textColor="@android:color/white" />

</LinearLayout>